{
  "info": {
    "_postman_id": "lamarin-api-complete",
    "name": "LAMARIN - REST API Complete",
    "description": "Postman Collection untuk testing Lamarin REST API\nTanggal: November 25, 2025\nBase URL: http://localhost:8000",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "0. API STATUS",
      "item": [
        {
          "name": "0.1 Check API Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/status",
              "host": ["{{base_url}}"],
              "path": ["api", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "1. AUTHENTICATION",
      "item": [
        {
          "name": "1.1 Register - Applicant User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('applicant_token', jsonData.token);",
                  "    pm.environment.set('applicant_user_id', jsonData.user.id);",
                  "    console.log('✓ Applicant registered. Token saved.');",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Applicant\",\n  \"email\": \"applicant{{$timestamp}}@test.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/register",
              "host": ["{{base_url}}"],
              "path": ["api", "register"]
            }
          }
        },
        {
          "name": "1.2 Register - Admin User",
          "event": [
            {
              "listen": "test",
              "script": {
