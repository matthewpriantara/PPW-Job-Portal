    {
      "name": "2. JOBS - READ (Protected)",
      "item": [
        {
          "name": "2.1 List All Jobs (Protected)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.length > 0) {",
                  "        pm.environment.set('job_id', jsonData.data[0].id);",
                  "        console.log('✓ Jobs retrieved. First job ID saved.');",
                  "    }",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{applicant_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "2.2 Get Job Detail (Protected)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{applicant_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/jobs/{{job_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "{{job_id}}"]
            }
          }
        },
        {
          "name": "2.3 Public Jobs (No Auth Required)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/public/jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "public", "jobs"]
            }
          }
        }
      ]
    },
    {
      "name": "3. JOBS - CRUD (Protected)",
      "item": [
        {
          "name": "3.1 Create Job (POST /jobs)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('created_job_id', jsonData.job.id);",
                  "    console.log('✓ Job created. ID: ' + jsonData.job.id);",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Software Engineer - NodeJS\",\n  \"description\": \"Develop and maintain backend services using NodeJS and Express. Required 2+ years experience.\",\n  \"department\": \"IT\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs"]
            }
          }
        },
        {
          "name": "3.2 Update Job (PUT /jobs/{job})",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Software Engineer - NodeJS\",\n  \"description\": \"Lead development team. Develop and maintain backend services using NodeJS and Express. Required 5+ years experience.\",\n  \"department\": \"IT\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/jobs/{{created_job_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "{{created_job_id}}"]
            }
          }
        },
        {
          "name": "3.3 Delete Job (DELETE /jobs/{job})",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/jobs/{{created_job_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "{{created_job_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "4. APPLICATIONS - SUBMIT & LIST",
      "item": [
        {
          "name": "4.1 Submit Application (POST /jobs/{job}/apply)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('application_id', jsonData.application.id);",
                  "    console.log('✓ Application submitted. ID: ' + jsonData.application.id);",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{applicant_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "cv",
                  "type": "file",
                  "src": "/path/to/your/cv.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/jobs/{{job_id}}/apply",
              "host": ["{{base_url}}"],
              "path": ["api", "jobs", "{{job_id}}", "apply"]
            }
          }
        },
        {
          "name": "4.2 List My Applications (GET /applications)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.length > 0) {",
                  "        pm.environment.set('application_id', jsonData[0].id);",
                  "        console.log('✓ Applications retrieved. ID: ' + jsonData[0].id);",
                  "    }",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{applicant_token}}"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/applications",
              "host": ["{{base_url}}"],
              "path": ["api", "applications"]
            }
          }
        }
      ]
    },
    {
      "name": "5. APPLICATIONS - ADMIN ACTIONS",
      "item": [
        {
          "name": "5.1 Update Application Status (PATCH /applications/{application}/status)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Accepted\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/applications/{{application_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{application_id}}", "status"]
            }
          }
        },
        {
          "name": "5.2 Reject Application (PATCH /applications/{application}/status)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Rejected\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/applications/{{application_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "applications", "{{application_id}}", "status"]
            }
          }
        }
      ]
    },
